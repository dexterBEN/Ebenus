<?xml version="1.0" encoding="UTF-8"?>

<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
>
	
	<session-config>
		<session-timeout>3</session-timeout>
	</session-config>
	
	<servlet>
		<servlet-name>IndexPageServlet</servlet-name>
		<servlet-class>com.cours.ebenus.maven.ebenus.front.office.web.IndexPageServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.cours.ebenus.maven.ebenus.front.office.web.LoginServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>WebWelcomeUser</servlet-name>
		<servlet-class>com.cours.ebenus.maven.ebenus.front.office.web.WebWelcomeUser</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CreateAccountServlet</servlet-name>
		<servlet-class>com.cours.ebenus.maven.ebenus.front.office.web.CreateAccountServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AuthenticationPageServlet</servlet-name>
		<servlet-class>com.cours.ebenus.maven.ebenus.front.office.web.AuthenticationPageServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>UpdateUserServlet</servlet-name>
		<servlet-class>com.cours.ebenus.maven.ebenus.front.office.web.UpdateUserServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>IndexPageServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>WebWelcomeUser</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AuthenticationPageServlet</servlet-name>
		<url-pattern>/authentication</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CreateAccountServlet</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UpdateUserServlet</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
</web-app>
